    Connection con1;
    PreparedStatement insert;
    
    private void table_update(){
        int c;
        
        try {
            Class.forName("com.mysql.jdbc.Driver");
            con1 = DriverManager.getConnection("jdbc:mysql://localhost/registration","root","qwerty");
            insert = con1.prepareStatement("select * from record");
            ResultSet rs= insert.executeQuery();
            ResultSetMetaData rss= rs.getMetaData();
            c=rss.getColumnCount();
            
            DefaultTableModel dt= (DefaultTableModel)jTable1.getModel();
            dt.setRowCount(0);
            
            while(rs.next()){
                Vector v=new Vector();
                for(int i=1;i<=c;i++){
                    v.add(rs.getString("id"));
                    v.add(rs.getString("name"));
                    v.add(rs.getString("college"));
                    v.add(rs.getString("event"));
                    
                }
                dt.addRow(v);
            }
            
            
             
        } 
        catch (ClassNotFoundException ex) {
            Logger.getLogger(Reg.class.getName()).log(Level.SEVERE, null, ex);
        }
        catch (SQLException ex) {
            Logger.getLogger(Reg.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }
    
    
    
    
    
    private void jButtonActionPerformed(java.awt.event.ActionEvent evt) {                                        
            String name=txtname.getText();
            String college=txtcollege.getText();
            String event=txtevent.getText();
            
            
            
        try {
            Class.forName("com.mysql.jdbc.Driver");
            con1 = DriverManager.getConnection("jdbc:mysql://localhost/registration","root","qwerty");
            insert = con1.prepareStatement("insert into record(name,college,event)values(?,?,?)");
            insert.setString(1,name);
            insert.setString(2,college);
            insert.setString(3,event);
            insert.executeUpdate();
            
            JOptionPane.showMessageDialog(this,"record added!");
                    table_update();
           
            txtname.setText("");
            txtevent.setText("");
            txtcollege.setText("");
            txtname.requestFocus();
             
        } 
        catch (ClassNotFoundException ex) {
            Logger.getLogger(Reg.class.getName()).log(Level.SEVERE, null, ex);
        }
        catch (SQLException ex) {
            Logger.getLogger(Reg.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                       

    private void editActionPerformed(java.awt.event.ActionEvent evt) {                                     
        DefaultTableModel dt= (DefaultTableModel)jTable1.getModel();
        int selectedindex=jTable1.getSelectedRow();
        
        try {
            int id=Integer.parseInt(dt.getValueAt(selectedindex,0).toString());
            
            
             String name=txtname.getText();
            String college=txtcollege.getText();
            String event=txtevent.getText();
            Class.forName("com.mysql.jdbc.Driver");
            con1 = DriverManager.getConnection("jdbc:mysql://localhost/registration","root","qwerty");
            insert = con1.prepareStatement("update record set name=?,college=?,event=? where id=?");
            insert.setString(1,name);
            insert.setString(2,college);
            insert.setString(3,event);
            insert.setInt(4,id);
            
            insert.executeUpdate();
            
            JOptionPane.showMessageDialog(this,"record Edited!");
                    table_update();
           
            txtname.setText("");
            txtevent.setText("");
            txtcollege.setText("");
            txtname.requestFocus();
             
        } 
        catch (ClassNotFoundException ex) {
            Logger.getLogger(Reg.class.getName()).log(Level.SEVERE, null, ex);
        }
        catch (SQLException ex) {
            Logger.getLogger(Reg.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                    

    private void deleteActionPerformed(java.awt.event.ActionEvent evt) {                                       
        
         DefaultTableModel dt= (DefaultTableModel)jTable1.getModel();
        int selectedindex=jTable1.getSelectedRow();
        
        try {
            int id=Integer.parseInt(dt.getValueAt(selectedindex,0).toString());
            
            int dialogResult = JOptionPane.showConfirmDialog(null,"Do you want to delete the record?","Warning",JOptionPane.YES_NO_OPTION);
            
            if(dialogResult==JOptionPane.YES_OPTION){
                
            
            
            
            Class.forName("com.mysql.jdbc.Driver");
            con1 = DriverManager.getConnection("jdbc:mysql://localhost/registration","root","qwerty");
            insert = con1.prepareStatement("delete from record where id=?");
            insert.setInt(1,id);
            
            insert.executeUpdate();
            
            JOptionPane.showMessageDialog(this,"record Deleted!");
                    table_update();
           
          /*  txtname.setText("");
            txtevent.setText("");
            txtcollege.setText("");
            txtname.requestFocus();
         */
            } 
        } 
        catch (ClassNotFoundException ex) {
            Logger.getLogger(Reg.class.getName()).log(Level.SEVERE, null, ex);
        }
        catch (SQLException ex) {
            Logger.getLogger(Reg.class.getName()).log(Level.SEVERE, null, ex);
        }
        
        
    }                                      

